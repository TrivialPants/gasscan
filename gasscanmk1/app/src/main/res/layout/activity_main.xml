<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="taylorandtanner.gasscanmk1.MainActivity"
    android:clickable="true">

    <Button
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan Receipt"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:background="#FFC107"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:clickable="true"
        android:onClick="testWriteDatabase"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mpgText"
        android:id="@+id/mpg"
        android:editable="true"
        android:textSize="70sp"
        android:layout_marginTop="75dp"
        android:layout_alignTop="@+id/drawer_layout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="120dp"
        android:layout_marginEnd="120dp" />"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/milesText"
        android:id="@+id/miles"
        android:editable="true"
        android:textSize="70sp"
        android:layout_below="@+id/mpg"
        android:layout_alignLeft="@+id/mpg"
        android:layout_alignStart="@+id/mpg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gallonsText"
        android:id="@+id/gallons"
        android:editable="true"
        android:textSize="70sp"
        android:layout_below="@+id/miles"
        android:layout_alignLeft="@+id/miles"
        android:layout_alignStart="@+id/miles" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gallons"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/gallons"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mpg"
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/mpg"
        android:layout_alignBottom="@+id/mpg"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/miles"
        android:id="@+id/textView6"
        android:editable="false"
        android:layout_alignBottom="@+id/miles"

        />




    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/mpg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ListView
            android:id="@+id/navList"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_gravity="left|start"
            android:background="#e7c1c1"
            android:choiceMode="singleChoice"
            android:alpha="100" />
    </android.support.v4.widget.DrawerLayout>


</RelativeLayout>
