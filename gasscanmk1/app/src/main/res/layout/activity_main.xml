<?xml version="1.0" encoding="utf-8"?>





<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="taylorandtanner.gasscanmk1.MainActivity"
    android:clickable="true">

    <Button
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan Receipt"
        android:id="@+id/Scan"
        android:layout_alignParentBottom="true"
        android:background="#FFC107"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:clickable="true"
        android:onClick="testWriteDatabase"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:id="@+id/mpg"
        android:editable="true"
        android:textSize="70sp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/miles"
        android:layout_alignStart="@+id/miles" />"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000"
        android:id="@+id/miles"
        android:editable="true"
        android:textSize="70sp"
        android:layout_below="@+id/mpg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gallonsText"
        android:id="@+id/gallons"
        android:editable="true"
        android:textSize="70sp"
        android:layout_below="@+id/miles"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gallons"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/gallons"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mpg"
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/mpg"
        android:layout_alignBottom="@+id/mpg"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/miles"
        android:id="@+id/textView6"
        android:editable="false"
        android:layout_alignBottom="@+id/miles"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        />

    <Button
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Firebase Retrieval"
        android:id="@+id/button"
        android:background="#64b468"
        android:clickable="true"
        android:onClick="testReadDatabase"
        android:layout_above="@+id/Scan"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test OCR"
        android:id="@+id/button2"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />


    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/Scan"
        android:layout_alignRight="@+id/Scan"
        android:layout_alignEnd="@+id/Scan">

        <ListView
            android:id="@+id/navList"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_gravity="left|start"
            android:background="#e7c1c1"
            android:choiceMode="singleChoice"
            android:alpha="100" />
    </android.support.v4.widget.DrawerLayout>


</RelativeLayout>
